<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.hol.smappdev.marvel_heroes_info.MainActivity">

    <FrameLayout
        android:id="@+id/hero_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="es.hol.smappdev.marvel_heroes_info.fragments.HeroListFragment"
        tools:layout="@layout/fragment_hero_list"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/hero_detail_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="es.hol.smappdev.marvel_heroes_info.fragments.HeroDetailFragment"
        />
</android.support.constraint.ConstraintLayout>
